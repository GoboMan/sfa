html, body
{
	height : 100%;
}

body::-webkit-scrollbar
{
	display : none;
}


//------------------------------------------------------------------------------
//	ui.icss オーバーライド
//------------------------------------------------------------------------------
#ui_toast_container
{
	bottom : 40px;
}
.ui_toast
{
	transform: translateY(14px);

	> div
	{
		font-size : 14px;
		background-color : #2a4;
		color : #fff;
	}
}
