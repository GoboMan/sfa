//	バックアップフォーム
#backup_form
{
	.info
	{
		font-size : 12px;
		color : #f44;
		padding : 8px;
	}
}

//	ファイル一覧
#files
{
	th, td
	{
		font-size : 14px;
		padding : 10px;
		border : solid 1px #ccc;
	}
	th
	{
		background-color : #f2f2f2;
	}
	th.left, td.left { text-align:left; }
	th.center, td.center { text-align:center; }
	th.right, td.right { text-align:right; }
}
