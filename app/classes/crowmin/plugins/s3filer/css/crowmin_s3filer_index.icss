#env
{
	background : #f2f2ff;
	padding : 20px 0;
	display : flex;
	flex-direction : row;
	align-items : center;
	border : solid #ccc;
	border-width : 0 0 1px 0;

	span
	{
		padding-left:10px;
	}
}

#path
{
	position : relative;

	[name=path]
	{
		border : none;
		width : 100%;
		padding-left : 80px;

		&:focus
		{
			background-color : #ffe;
		}
	}

	.prompt
	{
		position : absolute;
		left : 10px;
		top : 6px;
		width : 60px;
		height : 24px;
		line-height : 24px;
		border-radius : 12px;
		text-align : center;
		background : #024;
		color : white;
	}
}

#uploader
{
	text-align : right;
	padding : 10px;
}

#data
{
	width : 100%;
	border-collapse : collapse;

	th, td
	{
		text-align : left;
		font-size : 14px;
		border : solid 1px #ccc;
		padding : 8px;
		vertical-align : middle;

		&.min
		{
			width : 1%;
			white-space : nowrap;
		}

		&.left {text-align : left;}
		&.center {text-align : center;}
		&.right {text-align : right;}

		&.noborder-left
		{
			border-left-width : 0;
		}
		&.noborder-right
		{
			border-right-width : 0;
		}
	}
	th { background-color:#f2f2f2; font-weight:bold; }

	tr
	{
		&.dir
		{
			cursor : pointer;
			background-image: url('data:image/svg+xml;base64,');
			background-repeat : no-repeat;
			background-position : 10px 8px;
			background-size : 24px;

			td:first-child
			{
				padding-left : 48px;
			}
			&:hover
			{
				background-color : #ddf2dd;
			}
		}
		&.file
		{
			background-image: url('data:image/svg+xml;base64,');
			background-repeat : no-repeat;
			background-position : 10px 10px;
			background-size : 24px;

			td:first-child
			{
				padding-left : 48px;
			}
		}
	}
}

.button_trash
{
	cursor : pointer;
	border : solid 1px #000;
	border-radius : 24px;
	width : 24px;
	height : 24px;

	background-color : transparent;
	background-image: url('data:image/svg+xml;base64,');
	background-repeat : no-repeat;
	background-position : 50% 50%;
	background-size : 20px;

	&:hover
	{
		opacity : 0.8;
		background-color : #ffdddd;
		border-color : #c66;
	}
}

